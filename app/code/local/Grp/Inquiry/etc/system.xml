<config>
    <tabs>
        <grp translate="label" module="grp_inquiry">
            <label>Grp Inquiry</label>
            <sort_order>2000</sort_order>
        </grp>
    </tabs>
    <sections>
        <grp_inquiry translate="label" module="grp_inquiry">
            <class>separator-top</class>
            <label>Inquiry</label>
            <tab>grp</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <inquiry translate="label" module="grp_inquiry">
                    <label>Inquiry</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <inquiry_email translate="label">
                            <label>Inquiry Email Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </inquiry_email>
                        
                    </fields>
                </inquiry>
            </groups>
        </grp_inquiry>
    </sections>
